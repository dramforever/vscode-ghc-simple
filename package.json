{
    "name": "vscode-ghc-simple",
    "displayName": "Simple GHC (Haskell) Integration",
    "description": "Simple Haskell support using only GHCi",
    "repository": {
        "type": "git",
        "url": "https://github.com/dramforever/vscode-ghc-simple"
    },
    "license": "ISC",
    "version": "0.0.10",
    "publisher": "dramforever",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "haskell"
    ],
    "extensionDependencies": [
        "justusadam.language-haskell"
    ],
    "icon": "images/vgs-icon.png",
    "activationEvents": [
        "onLanguage:haskell"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "vscode-ghc-simple.restart",
                "title": "Restart GHCi sessions",
                "category": "GHC"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "GHC Simple configuration",
            "properties": {
                "ghcSimple.feature.diagnostics": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable diagnostics"
                },
                "ghcSimple.feature.rangeType": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable selection type tooltip"
                },
                "ghcSimple.feature.completion": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable completion"
                },
                "ghcSimple.feature.definition": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable go to definition"
                },
                "ghcSimple.workspaceType": {
                    "type": "string",
                    "default": "detect",
                    "description": "Workspace type, 'bare' means use GHCi directly",
                    "enum": [
                        "detect",
                        "stack",
                        "cabal",
                        "cabal new",
                        "cabal v2",
                        "bare-stack",
                        "bare"
                    ]
                },
                "ghcSimple.startupCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ":set -fno-diagnostics-show-caret -fdiagnostics-color=never -ferror-spans",
                        ":set -fdefer-type-errors -fdefer-typed-holes -fdefer-out-of-scope-variables"
                    ],
                    "description": "GHCi commands on startup to use for all workspace types"
                },
                "ghcSimple.bareStartupCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        ":set -Wall"
                    ],
                    "description": "Extra GHCi commands on startup to use for 'bare' workspace types"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "vscode": "^1.1.30"
    },
    "devDependencies": {
        "@types/node": "^6.14.4",
        "typescript": "^2.0.3",
        "vsce": "^1.58.0"
    }
}
